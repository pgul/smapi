# Makefile for EMX on OS/2 with a.out style linkage (EMX Runtime)
# see also makefile.emo
# No support for the Husky build environment


CC=	gcc
CFLAGS=	-Wall -Zcrtdll
CDEFS=	-DOS2
COPT=	-O3 -fomit-frame-pointer -fstrength-reduce -Wall -funsigned-char -s
LIB=	ar

.SUFFIXES:
.SUFFIXES: .c .o

TARGET=	smapiemx.a

OBJS=	1stchar.o  \
	api_sdm.o  \
	api_sq.o   \
	api_jam.o  \
	cvtdate.o  \
	date2bin.o \
	dosdate.o  \
	fexist.o   \
	ffind.o    \
	flush.o    \
	locking.o  \
	months.o   \
	msgapi.o   \
	parsenn.o  \
	patmat.o   \
	qksort.o   \
	strftim.o  \
	strocpy.o  \
	structrw.o \
	trail.o    \
	weekday.o

# Thunderbirds are go!

.c.o:
	$(CC) $(CFLAGS) $(CDEFS) $(COPT) -c $<
	$(LIB) r $(TARGET) $@

$(TARGET): $(OBJS)

clean:
	-DEL *.o

distclean:
	-DEL $(TARGET)
